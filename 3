func commandCatch(config *config) error {
	fmt.Printf("Throwing a Pokeball at %s...\n", *config.pokemonName)

	endpoint := fmt.Sprintf("https://pokeapi.co/api/v2/pokemon/%s", *config.pokemonName)
	pokemon := &pokemonDetails{}

	if p, ok := config.c.Get(endpoint); ok {
		if err := json.Unmarshal(p, pokemon); err != nil {
			return err
		}
	} else {
		res, err := http.Get(endpoint)
		if err != nil {
			return err
		}
		defer res.Body.Close()

		body, err := io.ReadAll(res.Body)
		if err != nil {
			return err
		}

		if err := json.Unmarshal(body, pokemon); err != nil {
			return err
		}
		config.c.Add(endpoint, body)
	}

	r := rand.New(rand.NewSource(time.Now().UnixNano()))
	chance := math.Mod(float64(pokemon.BaseExperience), float64(r.Float32()))
	if chance > 0.5 {
		fmt.Printf("%s was caught!\n", pokemon.Name)
		config.pokeballs[pokemon.Name] = *pokemon
	} else {
		fmt.Printf("%s escaped!\n", pokemon.Name)
	}

	return nil
}

func commandInspect(config *config) error {
	pokemon, ok := config.pokeballs[*config.pokemonName]
	if !ok {
		return fmt.Errorf("you have not caught this pokemon yet")
	}

	fmt.Println("Name: ", pokemon.Name)
	fmt.Println("Height: ", pokemon.Height)
	fmt.Println("Weight: ", pokemon.Weight)
	fmt.Println("Stats:")
	for _, s := range pokemon.Stats {
		fmt.Printf("\t- %s: %v\n", s.Stat.Name, s.BaseStat)
	}

	fmt.Println("Types:")
	for _, t := range pokemon.Types {
		fmt.Printf("\t- %s\n", t.Type.Name)
	}

	return nil
}

func commandPokedex(config *config) error {
	fmt.Println("Your pokedex:")
	for name := range config.pokeballs {
		fmt.Printf("\t- %s\n", name)
	}

	return nil
}

func commandHelp(config *config) error {
	fmt.Print("Welcome to the Pokedex!\nUsage:\n\n")
	for _, command := range commands {
		fmt.Printf("%s: %s\n", command.name, command.description)
	}
	return nil
}

func commandClearCache(config *config) error {
	config.c.ReapLoop(5 * time.Second)
	return nil
}

func commandClear(config *config) error {
	switch runtime.GOOS {
	case "windows":
		cmd := exec.Command("cmd", "/c", "cls")
		cmd.Stdout = os.Stdout
		_ = cmd.Run()
	case "linux", "darwin":
		cmd := exec.Command("clear")
		cmd.Stdout = os.Stdout
		_ = cmd.Run()
	default:
		fmt.Print("Your os is not supported for clear operation!\n")
	}
	return nil
}

func commandExit(config *config) error {
	fmt.Print("Closing the Pokedex... Goodbye!")
	os.Exit(0)
	return nil
}

func main() {
	c := cache.NewCache(5 * time.Second)
	pokeballs := make(map[string]pokemonDetails)
	config := &config{c: c, pokeballs: pokeballs, next: "https://pokeapi.co/api/v2/location-area/", red: color.New(color.FgRed), blue: color.New(color.FgBlue), green: color.New(color.FgGreen)}

	fmt.Print(config.red.Sprint("Pokedex > "))
	scanner := bufio.NewScanner(os.Stdin)
	for scanner.Scan() {
		text := scanner.Text()
		cleanedText := cleanInput(text)

		if command, ok := commands[cleanedText[0]]; ok {
			switch command.name {
			case "map", "mapb", "pokedex", "cc":
				if err := command.callback(config); err != nil {
					fmt.Println(err)
				}
			case "explore":
				if len(cleanedText) == 2 {
					config.locationName = &cleanedText[1]
					if err := command.callback(config); err != nil {
						fmt.Println(err)
					}
				} else {
					fmt.Println("Expected a area name,found none")
				}
			case "catch", "inspect":
				if len(cleanedText) == 2 {
					config.pokemonName = &cleanedText[1]
					if err := command.callback(config); err != nil {
						fmt.Println(err)
					}
				} else {
					fmt.Println("Expected a pokemon name,found none")
				}
			case "help", "clear", "exit":
				if err := command.callback(nil); err != nil {
					fmt.Println(err)
				}
			}
		} else {
			fmt.Print("Unknown command\n")
		}
		fmt.Print(config.red.Sprint("Pokedex > "))
	}
}
